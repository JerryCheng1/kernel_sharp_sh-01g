/include/ "sharp-shdisp-ir2e71y6.dtsi"
/include/ "sharp-shdisp-dsi-panel-andy-dl60-1080p-video.dtsi"
/include/ "sharp-shdisp-andy.dtsi"

&soc {

	sharp,shdisp_ir2e71y6 {
		status = "ok";
	};
	sharp,shdisp_andy_irq {
		status = "ok";
	};
};

&mdss_mdp {
	qcom,mdss-pref-prim-intf = "dsi";
};

&dsi_shdisp_andy {
	status = "ok";

	qcom,mdss-pan-physical-width-dimension = <68>;
	qcom,mdss-pan-physical-height-dimension = <121>;
};

&mdss_dsi0 {
	qcom,dsi-pref-prim-pan=<&dsi_shdisp_andy>;

	/delete-property/ vdd-supply;
	/delete-property/ qcom,platform-reset-gpio;
	/delete-property/ qcom,platform-enable-gpio;
	/delete-property/ qcom,platform-te-gpio;

	/delete-node/ qcom,platform-supply-entry1;
};

&mdss_dsi1 {
	/delete-property/ vdd-supply;
};

/ {
	memory {
		display_mem: display_mem@0 {
			linux,contiguous-region;
			linux,reserve-region;
			reg = <0 0x00FF0000>;
			label = "display_mem";
		};
	};
};

&mdss_fb0 {
	linux,contiguous-region = <&display_mem>;
};

